<!DOCTYPE html>
<html>
	<head>
		<title>ToDo List</title>
		<link rel="stylesheet" href="css/styles.css" />
	</head>
	<body>
		<div class="box" id="heading">
			<h1><%= dateHeading %></h1>
		</div>
		<div class="box">
			<% todoItems.forEach(function(item) {%>
			<form action="/delete" method="post">
				<div class="item">
					<input
						type="checkbox"
						name="checkbox"
						value="<%=item._id%>"
						onChange="this.form.submit()"
					/>
					<p><%= item.todoItem %></p>
				</div>
				<input type="hidden" name="listName" value="<%= dateHeading %>" />
			</form>
			<% }); %>

			<form class="item" action="/" method="post">
				<input
					name="todoItem"
					type="text"
					autocomplete="off"
					placeholder="New Item"
				/>
				<button type="submit" name="button" value="<%= dateHeading %>">
					+
				</button>
			</form>
		</div>
	</body>
</html>
